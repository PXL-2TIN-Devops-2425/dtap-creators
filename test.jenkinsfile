pipeline {
    agent any

    tools {
        nodejs "testenvnode"
    }

    stages {
        stage('Cleanup') {
            steps {
                cleanWs()
            }
        }
        
        stage('Fetch app code') {
            steps {
                git branch: 'main', url: 'https://github.com/PXL-2TIN-DevOps-Resources/calculator-app-finished.git'
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Build artifact') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'dockerhub_credentials', usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
                }
                sh 'docker build . -t lieve91/calculatorapp:latest'
            }
        }

        stage('Push artifact') {
            steps {
                sh 'docker push lieve91/calculatorapp:latest'
            }
        }

         stage('deployment') {
            steps {
                sh 'docker pull lieve91/calculatorapp:latest'
                sh 'docker run -d -p 3000:80 lieve91/calculatorapp:latest'
            }
        }
    }
}
